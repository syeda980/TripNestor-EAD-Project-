<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/admin-signup.css">

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;800&display=swap" />


    <title>AdminSignIn</title>
</head>
<body>

    @if (ViewBag.invalid == true)
     {
        <div class="alert alert-warning alert-dismissible fade show" role="alert" style="background-color: #769A0C ">
            <strong>@ViewBag.invalidmsg</strong>
            <span onclick="this.parentElement.style.display='none'"style="font-size:1.5rem; cursor:pointer" ;>&times;</span>
        </div>
     }
    <div class="container" id="container">
        <div class="form-container">
            <form method="POST"action="/admin/Login">
                <h1>Sign in</h1>
                <input type="email" placeholder="Email" name="email" />
                <input type="password" placeholder="Password" name="password" />
                <button id="SIGNIN" type="submit" name="submit">Sign In</button>
            </form>
        </div>

       
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>TripNestor</h1>
                    <p class="text-break text-wrap text-center" style=" color: #FFFFFF;">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        Fusce a feugiat nulla, vel efficitur augue.
                        Mauris blandit mauris ut lorem interdum volutpat.
                        Fusce semper urna.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="MobileDisplay" id="MobileDisplay">
        <div class="container-fluid">
            <form method="POST" style="height: 26rem;"action="/admin/Login">
                <h1 style="color:white">TripNestor </h1>
                <div class="form-group">
                    <input type="email" class="form-control"required placeholder="Email" name="email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control"required placeholder="Enter password" name="password">
                </div>
                <a href="/forgotPassword"> <u> Forgot your password?</u></a>

                <button type="submit" id="SIGNIN" class="btn ">Sign In</button>
            </form>
        </div>
    </div>

</body>
</html>