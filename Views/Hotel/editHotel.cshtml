@model List<TripNestor.Models.Hotel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous" />
    <!-- custom css-->
    <link rel="stylesheet" href="~/css/adminHome.css" />

</head>
<body style="background-color: white; align-items: center ">
    <div class="container">
        <h1 style="color:black; text-align:center">TripNestor</h1>
        <h5 style="color:black; text-align:center">Edit Hotel</h5>
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-bordered table-striped table-light">
                    <thead>
                        <tr class="table-info">
                            <th scope="col">Hotel_ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">No of Rooms</th>
                            <th scope="col" style="width:30%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TripNestor.Models.Hotel hotel in Model)
                        {
                        <tr>
                            <td>@hotel.HotelId</td>
                            <td>@hotel.HotelName</td>
                            <td>@hotel.NoOfRooms</td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit"asp-controller="hotel" asp-route-id="@hotel.HotelId">Edit</a>

                                <a class="btn btn-danger" asp-action="Remove" asp-controller="hotel" asp-route-id="@hotel.HotelId">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
